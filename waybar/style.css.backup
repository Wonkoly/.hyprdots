/* ===============================
   Waybar Style — Gruvbox (Dark)
   Notas:
   - GTK3 NO soporta :root ni var().
   - Define colores con @define-color y úsalos como @nombre.
   =============================== */

/* Paleta Gruvbox */
@define-color bg0        #282828;
@define-color bg1        #3c3836;
@define-color bg2        #504945;

@define-color fg0        #fbf1c7;
@define-color fg1        #ebdbb2;
@define-color fg2        #d5c4a1;

@define-color red        #fb4934;
@define-color green      #b8bb26;
@define-color yellow     #fabd2f;
@define-color blue       #83a598;
@define-color purple     #d3869b;
@define-color aqua       #8ec07c;
@define-color orange     #fe8019;

/* Contenedor principal */
window#waybar {
  background: transparent;
  color: @fg0;
  font-family: "FiraCode Nerd Font", "JetBrainsMono Nerd Font", monospace;
  font-size: 14px;
}

/* “Cápsula” de la barra */
window#waybar > box {
  background: @bg0;
  border-radius: 12px;
  padding: 4px 8px;
  margin-top: 6px;
  margin-bottom: 6px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.25);
}

/* Workspaces */
#workspaces button {
  background: @bg1;
  color: @fg1;
  border-radius: 8px;
  padding: 4px 8px;
  margin: 0 3px;
}
#workspaces button.active {
  background: @aqua;
  color: #1d2021;
  font-weight: 700;
}
#workspaces button.urgent {
  background: @red;
  color: #1d2021;
}

/* Módulos comunes */
#clock,
#network,
#pulseaudio,
#battery,
#tray,
#window {
  background: @bg1;
  color: @fg0;
  padding: 6px 10px;
  border-radius: 12px;
  margin: 0 4px;
}

/* Estados */
#pulseaudio.muted {
  background: @bg2;
  color: @yellow;
}
#network.disconnected {
  background: @bg2;
  color: @yellow;
}
#battery.warning {
  background: @bg2;
  color: @yellow;
}
#battery.critical {
  background: @bg2;
  color: @red;
}

/* Ventana activa */
#window { min-width: 200px; }
#window > label { color: @fg2; }

/* Tooltip */
tooltip {
  background: @bg1;
  color: @fg0;
  border-radius: 8px;
  border: 1px solid @bg2;
}

/* Bandeja */
#tray > .item { margin: 0 3px; }

